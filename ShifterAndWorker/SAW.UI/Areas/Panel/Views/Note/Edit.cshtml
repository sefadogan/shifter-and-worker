
@using SAW.Model.ViewModel
@model VMNote

@{
    ViewBag.Title = "Edit Note";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div style="margin: 100px 50px;">

    <div class="header">
        <a class="btn btn-xs btn-dark" href="/Panel/Note/List"><i class="fa fa-arrow-circle-left"></i> Back To List</a>
        <h1><strong>Edit</strong> Note</h1>
        <hr />
    </div>
    <div class="row">

        @if (TempData["ProcessResult"] != null)
        {
            <div class="alert alert-@TempData["AlertType"]" role="alert">
                @TempData["ProcessResult"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-lg-12">
            @using (Html.BeginForm("Edit", "Note", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row m-t-10">
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label class="control-label">Title*</label>
                            <div class="append-icon">
                                <input type="text" name="title" value="@Model.Title" class="form-control form-white" maxlength="100" autocomplete="off" autofocus required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Body*</label>
                            <div class="append-icon">
                                <input type="text" name="body" value="@Model.Body" class="form-control form-white" autocomplete="off" />
                            </div>
                        </div>
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

