
@{
    ViewBag.Title = "Create Note";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div style="margin: 100px 50px;">
    <div class="header">
        @*<a class="btn btn-xs btn-dark" href="/Panel/Note/List"><i class="fa fa-arrow-circle-left"></i> Back To List</a>*@
        <h1><strong>Create</strong> Note</h1>
        <hr />
    </div>
    <div class="row">
        @if (TempData["ProcessResult"] != null)
        {
            <div class="alert alert-@TempData["AlertType"]" role="alert">
                @TempData["ProcessResult"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-lg-12">
            @using (Html.BeginForm("Create", "Note", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row m-t-10">
                    <div class="col-xs-3">

                        <div class="form-group">
                            <label class="control-label">Title*</label>
                            <div class="append-icon">
                                <input type="text" name="title" class="form-control form-white" autocomplete="off" maxlength="100" autofocus required />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Body*</label>
                            <div class="append-icon">
                                <textarea class="form-control form-white" name="body" style="resize:vertical;" rows="10"  autocomplete="off" required></textarea>
                            </div>
                        </div>

                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

