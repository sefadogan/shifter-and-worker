
@model SAW.Model.ViewModel.VMAccountSettings

@{
    ViewBag.Title = "Account Settings";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div style="margin: 100px 50px;">
    <div class="header">
        <h1><strong>Account</strong> Settings</h1>
        <hr />
    </div>
    <div class="row">
        @if (TempData["ProcessResult"] != null)
        {
            <div class="alert alert-@TempData["AlertType"]" role="alert">
                @TempData["ProcessResult"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
            <div class="col-lg-12">
                @using (Html.BeginForm("Settings", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row m-t-10">
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="control-label">First Name*</label>
                                <div class="append-icon">
                                    <input type="text" name="firstName" value="@Model.FirstName" class="form-control form-white" maxlength="40" autocomplete="off" autofocus required />
                                    <i class="icon-user"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Last Name*</label>
                                <div class="append-icon">
                                    <input type="text" name="lastName" value="@Model.LastName" class="form-control form-white" maxlength="40" autocomplete="off" required />
                                    <i class="icon-user"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Telephone*</label>
                                <div class="append-icon">
                                    <input type="tel" name="phone" value="@Model.Phone" class="form-control form-white" maxlength="10" minlength="10" autocomplete="off" required />
                                    <i class="fa fa-phone"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Date of Birth</label>
                                <div class="append-icon">
                                    <input type="text" id="datepicker" name="dateOfBirth" value="@Model.DateOfBirth" class="form-control form-white" />
                                    <i class="fa fa-table"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Email*</label>
                                <div class="append-icon">
                                    <input type="email" name="email" value="@Model.Email" class="form-control form-white" maxlength="50" autocomplete="off" required />
                                    <i class="icon-envelope"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">About</label>
                                <div class="append-icon">
                                    <input type="text" name="about" value="@Model.About" class="form-control form-white" autocomplete="off" />
                                    <i class="fa fa-question-circle"></i>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Image Url</label>
                                <div class="append-icon">
                                    <input type="text" name="imageUrl" value="@Model.ImageUrl" class="form-control form-white" maxlength="300" autocomplete="off" />
                                    <i class="fa fa-image"></i>
                                </div>
                            </div>
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </span>
                        </div>
                    </div>
                }
            </div>
    </div>
</div>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>