
@using SAW.Model.ViewModel
@model VMAnnouncementEdit

@{
    ViewBag.Title = "Edit Announcement";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div style="margin: 100px 50px;">
    
        <a class="btn btn-xs btn-dark" href="/Panel/Announcement/List"><i class="fa fa-arrow-circle-left"></i> Back To List</a>
   
    <div class="header">
        <h1><strong>Edit</strong> Announcement</h1>
        <hr />
    </div>
    <div class="row">
        @if (TempData["ProcessResult"] != null)
        {
            <div class="alert alert-@TempData["AlertType"]" role="alert">
                @TempData["ProcessResult"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
            <div class="col-lg-12">
                @using (Html.BeginForm("Edit", "Announcement", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row m-t-10">
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="control-label">Title*</label>
                                <div class="append-icon">
                                    <input type="text" name="title" value="@Model.Title" class="form-control form-white" maxlength="150" autocomplete="off" autofocus required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Body*</label>
                                <div class="append-icon">
                                    <input type="text" name="body" value="@Model.Body" class="form-control form-white" autocomplete="off" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Important</label>
                                <div class="append-icon">
                                    @Html.CheckBoxFor(x => x.IsImportant)
                                </div>
                            </div>
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </span>
                        </div>
                    </div>
                }
            </div>
    </div>
</div>

