
@using SAW.Model.ViewModel
@using SAW.DAL.Context
@model VMUserCreate

@{
    ViewBag.Title = "Create User";
}

<div style="margin: 100px 50px;">
    <div class="header">
            <a class="btn btn-xs btn-dark" href="/Panel/User/List"><i class="fa fa-arrow-circle-left"></i> Back To List</a>
        <h1><strong>Create</strong> User</h1>
        <hr />
    </div>
    <div class="row">
        @if (TempData["ProcessResult"] != null)
        {
            <div class="alert alert-@TempData["AlertType"]" role="alert">
                @TempData["ProcessResult"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-lg-12">
            @using (Html.BeginForm("Create", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row m-t-10">
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label class="control-label">First Name*</label>
                            <div class="append-icon">
                                <input type="text" name="firstName" class="form-control form-white" maxlength="40" autocomplete="off" autofocus required />
                                <i class="icon-user"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Last Name*</label>
                            <div class="append-icon">
                                <input type="text" name="lastName" class="form-control form-white" maxlength="40" autocomplete="off" required />
                                <i class="icon-user"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Telephone*</label>
                            <div class="append-icon">
                                <input type="tel" name="phone" class="form-control form-white" maxlength="10" minlength="10" autocomplete="off" required />
                                <i class="fa fa-phone"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Date of Birth</label>
                            <div class="append-icon">
                                <input type="text" id="datepicker" name="dateOfBirth" class="form-control form-white" />
                                <i class="fa fa-table"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Email*</label>
                            <div class="append-icon">
                                <input type="email" name="email" class="form-control form-white" maxlength="50" autocomplete="off" required />
                                <i class="icon-envelope"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">About</label>
                            <div class="append-icon">
                                <input type="text" name="about" class="form-control form-white" autocomplete="off" />
                                <i class="fa fa-question-circle"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Image Url</label>
                            <div class="append-icon">
                                <input type="text" name="imageUrl" class="form-control form-white" maxlength="300" autocomplete="off" />
                                <i class="fa fa-image"></i>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Department*</label>
                            @Html.DropDownListFor(model => model.DepartmentId, new SelectList(Model.Departments, "DepartmentId", "Name"), "Select a department", new { @class = "form-control", required = "true" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Supervisor</label>
                            @Html.DropDownListFor(model => model.SupervisorId, new SelectList(Model.Supervisors, "UserId", "FirstName"), "Select a supervisor", new { @class = "form-control"})
                        </div>
                        <div class="form-group">
                            <label class="control-label">Roles*</label>
                            @Html.DropDownListFor(model => model.RoleId, new SelectList(Model.Roles, "RoleId", "Name"), "Select a role", new { @class = "form-control", required = "true" })
                        </div>
                        <div class="form-group">
                            <label class="control-label">Working Type*</label>
                            @Html.DropDownListFor(model => model.WorkingTypeId, new SelectList(Model.WorkingTypes, "WorkingTypeId", "Name"), "Select a working type", new { @class = "form-control", required = "true" })
                        </div>
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>

