
@using SAW.DAL.Context
@model SAW.Model.ViewModel.VMDepartmentEdit

@{
    ViewBag.Title = "Department Edit";
    Layout = "~/Areas/Panel/Views/Shared/_Layout.cshtml";
}

<div style="margin: 100px 50px;">
    
    <div class="header">
        <a class="btn btn-xs btn-dark" href="/Panel/Department/List"><i class="fa fa-arrow-circle-left"></i> Back To List</a>
        <h1><strong>Edit</strong> Department</h1>
        <hr />
    </div>
    <div class="row">

        @if (TempData["ProcessResult"] != null)
        {
            <div class="alert alert-@TempData["AlertType"]" role="alert">
                @TempData["ProcessResult"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
            <div class="col-lg-12">
                @using (Html.BeginForm("Edit", "Department", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row m-t-10">
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="control-label">Department Name*</label>
                                <div class="append-icon">
                                    <input type="text" name="name" value="@Model.Name" class="form-control form-white" maxlength="30" autocomplete="off" autofocus required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Min. Employees</label>
                                <div class="append-icon">
                                    <input type="number" name="minEmployees" value="@Model.MinEmployees" class="form-control form-white" autocomplete="off" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Max. Employees</label>
                                <div class="append-icon">
                                    <input type="number" name="maxEmployees" value="@Model.MaxEmployees" class="form-control form-white" autocomplete="off" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Parent Department</label>
                                @Html.DropDownListFor(model => model.ParentDepartmentId, new SelectList(Model.Departments, "DepartmentId", "Name"), "Select a department", new { @class = "form-control" })
                            </div>
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </span>
                        </div>
                    </div>
                }
            </div>
    </div>
</div>

