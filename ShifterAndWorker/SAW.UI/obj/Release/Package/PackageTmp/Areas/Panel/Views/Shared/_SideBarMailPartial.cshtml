
@model SAW.Model.ViewModel.Partials.VMSideBarMailPartial

<!-- BEGIN SIDEBAR -->
<div class="sidebar sidebar-mailbox">
    <div class="logopanel">
        <h1>
            <a href="/Panel/Dashboard/Index"></a>
        </h1>
    </div>
    <div class="sidebar-inner no-scrollbar">
        <div class="sidebar-top">
            <a href="~/Panel/Mail/Send" class="btn btn-primary btn-compose">Send an Email</a>
        </div>
        <ul class="nav nav-sidebar">
            <li class="tm nav-active">
                <a href="/Panel/Mail/Inbox">
                    @if (Model.NumberOfMails > 0)
                    {
                        <span class="pull-right badge badge-primary">
                            @Model.NumberOfMails
                        </span>
                    }
                    <i class="icons-office-28"></i><span>Inbox</span>
                </a>
            </li>
            <li class="tm">
                <a href="#"><i class="icons-chat-messages-14"></i><span>Sent Mail </span></a>
            </li>
            <li class="tm">
                <a href="/Panel/Mail/Trash"><i class="icons-office-57"></i><span>Trash </span></a>
            </li>
        </ul>
        <div class="sidebar-footer clearfix">
            <a class="pull-left footer-settings" href="#" data-rel="tooltip" data-original-title="Settings">
                <i class="icon-settings"></i>
            </a>
            <a class="pull-left toggle_fullscreen" href="#" data-rel="tooltip" data-original-title="Fullscreen">
                <i class="icon-size-fullscreen"></i>
            </a>
            <a class="pull-left" href="#" data-rel="tooltip" data-original-title="Lockscreen">
                <i class="icon-lock"></i>
            </a>
            <a class="pull-left btn-effect" href="/Panel/Account/Logout" data-modal="modal-1" data-rel="tooltip" data-original-title="Logout">
                <i class="icon-power"></i>
            </a>
        </div>
    </div>
</div>
<!-- END SIDEBAR -->