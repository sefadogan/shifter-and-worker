
@using SAW.DAL.Context
@model Announcement

@{
    ViewBag.Title = "Create Announcement";
}

<div style="margin: 100px 50px;">
    
    <div class="header">
        <a class="btn btn-xs btn-dark" href="/Panel/Announcement/List"><i class="fa fa-arrow-circle-left"></i> Back To List</a>
        <h1><strong>Create</strong> Announcement</h1>
        <hr />
    </div>
    <div class="row">
        @if (TempData["ProcessResult"] != null)
        {
            <div class="alert alert-@TempData["AlertType"]" role="alert">
                @TempData["ProcessResult"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
            <div class="col-lg-12">
                @using (Html.BeginForm("Create", "Announcement", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="row m-t-10">
                        <div class="col-xs-3">
                            <div class="form-group">
                                <label class="control-label">Title*</label>
                                <div class="append-icon">
                                    <input type="text" name="title" class="form-control form-white" maxlength="150" autocomplete="off" autofocus required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Body*</label>
                                <div class="append-icon">
                                    <input type="text" name="body" class="form-control form-white" autocomplete="off" required />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Important</label>
                                <div class="append-icon">
                                    @*<input type="checkbox" name="IsImportant" class="form-control form-white" autocomplete="off" />*@
                                    @Html.CheckBox("isImportant", true)
                                </div>
                            </div>
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </span>
                        </div>
                    </div>
                }
            </div>
    </div>
</div>
