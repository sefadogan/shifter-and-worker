
@using SAW.DAL.Context
@model List<Shift>

@{
    ViewBag.Title = "Preview";

    User loggedUser = Session["LoggedUser"] as User;
}

<div style="margin: 100px 50px;">
    <div class="header">
        <a class="btn btn-xs btn-dark" href="/Panel/Shift/Preview"><i class="fa fa-arrow-circle-left"></i> Back To Preview</a>
        <h1><strong>Preview</strong> Shifts</h1>
        <hr />
    </div>
    <div class="row">
        @if (TempData["ProcessResult"] != null)
        {
            <div class="alert alert-@TempData["AlertType"]" role="alert">
                @TempData["ProcessResult"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-lg-12">
            <div class="m-t-10">
                @foreach (var shift in Model)
                {
                    <div class="row">
                        @if (loggedUser.Role.Name.ToLower().Contains("manager"))
                        {
                            <div class="col-md-1">
                                @shift.User.FirstName @shift.User.LastName
                            </div>
                        }
                        <div class="col-md-11">
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                            <span class="badge badge-secondary">@j</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

